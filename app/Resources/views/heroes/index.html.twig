{% extends 'layout.html.twig' %}

{% block content %}

    <div class="container">
        <div class="row">
            {% for d in data %}
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-3">
                    <div class="card card_hero">
                        <div class="img_container" style="background-image: url('{{ d['thumbnail'] }}')"></div>
                        <a href="{{ path('show', { 'name': d.name }) }}" class="card-title hero_name">{{ d['name'] }}</a>

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}